{
  "name": "Photosensitivity Video Blocker",
  "description": "Stops videos and gifs from auto-playing.",
  "version": "0.1.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup_menu.html",
    "default_icon": "PSVB_icon_grey.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ]
}